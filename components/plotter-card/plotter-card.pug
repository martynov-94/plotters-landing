-
  const IMG_PATH = "img/plotters/";

mixin plotter-card(className, plotterData)
  div(class=className id=plotterData.id data-id=plotterData.dbID)
    img.plotter-card__pic(src=IMG_PATH + plotterData.img.src width=plotterData.img.width height=plotterData.img.height alt=plotterData.img.alt)
    h2.plotter-card__name= plotterData.name
    if plotterData.annotation 
      h3.plotter-card__annotation= plotterData.annotation
    p.plotter-card__price= plotterData.price
    button.plotter-card__more-btn.btn.btn_small Подробнее